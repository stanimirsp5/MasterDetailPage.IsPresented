<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:livelabel"
             x:Class="livelabel.LiveLabelMaster"
             Title="Master">

    <ContentPage.Content>
        <StackLayout Margin="5,30,5,5">
            <Label Text="Master Page">
            </Label>

            <Button x:Name="b1"
                    Text="Close master page button"
                    BackgroundColor="Yellow"
                    Clicked="CloseMasterHandler"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>









